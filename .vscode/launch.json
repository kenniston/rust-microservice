{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        ////////////////////////
        // GDB DEBUG SECTION
        ////////////////////////
        {
            "name": "GDB executable 'server'",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/server",
            "stopAtEntry": false,
            "args": [
                "--config-file=examples/server/assets/custom-config.yaml",
                "run"
            ],
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "rust-gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                }
            ],
            "preLaunchTask": "rust: cargo build",
            "environment": [
                {
                    "name": "RUST_BACKTRACE",
                    "value": "0"
                },
                {
                    "name": "RUST_LOG",
                    "value": "info,actix_web=error,actix_web_prom=error"
                }
            ]
        },
        {
            "name": "GDB Integration Test 'server'",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/deps/mod-56bc9f4b320afa8b",
            "stopAtEntry": false,
            "args": [],
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "rust-gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "rust: cargo test mod",
            "environment": [
                {
                    "name": "RUST_BACKTRACE",
                    "value": "0"
                },
                {
                    "name": "RUST_LOG",
                    "value": "debug,actix_web=error,actix_web_prom=error,testcontainers=info,reqwest=info,hyper_util=info,bollard=info,rustls=info,rust_microservice::data::database=info,seaorm=info,sqlx::pool=debug,sea_orm::driver::sqlx_postgres=info"
                }
            ]
        },
    ]
}